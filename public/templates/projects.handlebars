<!-- Work -->
<div class="work container">

    <div class="row">
        <div class="highlight-wrapper">
            <img class="highlight-ratio" src="http://placehold.it/16x9"/>
            <iframe class="highlight-iframe" src="{{highlight.link}}?color=ffffff&title=0&byline=0&portrait=0" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
    </div>

    {{#createrow 3 projects}}
        <div class="row">
            {{#each this }}
            <section class="four columns project">
                <a href="{{link}}" target="_blank" title="{{title}}">
                    <img src="{{thumbnail}}">
                    <h2>{{title}}</h2>
                    <p>{{description}}</p>
                </a>
            </section>
            {{/each}}
        </div>
    {{/createrow}}
</div>
